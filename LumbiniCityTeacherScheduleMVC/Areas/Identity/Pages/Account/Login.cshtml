@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}



<div class="d-flex justify-content-center mt-4">
    <div class="col-md-6 col-lg-4">
        <!-- Enhanced Card with gradient background -->
        <div class="card shadow-lg rounded-4 border-0" style="background: #f8f9fa;">
            <div class="card-body p-4">
                <form id="account" method="post">
                    <h4 class="mb-3 text-center text-primary">Use your account to log in</h4>
                    <hr />

                    <!-- Validation message -->
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                    <!-- Email Input -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <!-- Password Input -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <!-- Remember Me Checkbox -->
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <button id="login-submit" type="submit" class="w-100 btn btn-primary btn-lg rounded-3">Log in</button>

                    <hr class="my-4" />

                    <!-- Forgot Password, Register, and Resend Confirmation Links -->
                    <div class="text-center">
                        
                        <p class="mb-2">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-secondary">Register as a new user</a>
                        </p>
                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
