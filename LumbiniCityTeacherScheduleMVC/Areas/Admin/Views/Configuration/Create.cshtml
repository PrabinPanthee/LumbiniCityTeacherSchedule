@model LumbiniCityTeacherSchedule.Models.DTO.CreateSemesterScheduleConfigDTO;

@{
    ViewData["Title"] = "Create Semester Schedule Configuration";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Semester Schedule Configuration</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @ViewBag.Error
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="Create" method="post">
            @Html.HiddenFor(m => m.SemesterId)
            @Html.HiddenFor(m=>m.ProgramId)

            <div class="mb-3">
                <label asp-for="TotalClasses" class="form-label"></label>
                <input asp-for="TotalClasses" class="form-control" />
                <span asp-validation-for="TotalClasses" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="BreakAfterPeriod" class="form-label"></label>
                <input asp-for="BreakAfterPeriod" class="form-control" />
                <span asp-validation-for="BreakAfterPeriod" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Create
                </button>
                <a asp-action="Index" asp-route-semesterId="@Model.SemesterId" asp-route-programId ="@Model.ProgramId" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

