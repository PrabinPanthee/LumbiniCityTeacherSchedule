@model LumbiniCityTeacherSchedule.Models.DTO.SemesterDTO

@{
    ViewData["Title"] = "Create Semester";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Semester</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="Create" method="post">

            <!-- Display global ModelState errors -->
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <!-- ProgramId (Hidden Input) -->
            <input type="hidden" asp-for="ProgramId" value="@Model.ProgramId" />

            <!-- Semester Number -->
            <div class="form-floating py-2">
                <input asp-for="SemesterNumber" class="form-control border-0 shadow" />
                <label asp-for="SemesterNumber" class="ms-2"></label>
                <span asp-validation-for="SemesterNumber" class="text-danger"></span>
            </div>

            <div class="row mt-3">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Submit</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Semester" asp-action="Index" asp-route-id="@Model.ProgramId" class="btn btn-outline-primary border form-control">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

