@model LumbiniCityTeacherSchedule.Models.Models.Program
@{
    ViewData["Title"] = "Program Details";
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger text-center mt-3">
        @ViewBag.Error
    </div>
}
else if (Model != null)
{
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Program Details</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <dl class="row">
                <dt class="col-sm-3">Program Name</dt>
                <dd class="col-sm-9">@Model.ProgramName</dd>
            </dl>

            <div class="row">
                <div class="col-6">
                    <a asp-action="Index" class="btn btn-outline-primary form-control">Back to List</a>
                </div>
            </div>
        </div>
    </div>
}