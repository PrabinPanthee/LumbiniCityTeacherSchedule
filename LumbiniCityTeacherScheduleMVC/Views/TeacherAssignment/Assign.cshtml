@using LumbiniCityTeacherSchedule.Models.ViewModel
@model AddTeacherAssignmentViewModel
@{
    ViewData["Title"] = "Assign Teacher";
}

<div class="container mt-4">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Assign Teacher</h5>
            <a asp-action="Index" class="btn btn-sm btn-light">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
        <div class="card-body">
           
            <form asp-action="Assign" method="post" class="needs-validation" novalidate>\
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
                {
                    <div class="alert alert-danger">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }
              
                <input type="hidden" asp-for="SubjectId" />

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Subject</label>
                        <div class="form-control-plaintext">
                            <i class="bi bi-book"></i> @Model.SubjectName
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SelectedTeacherId" class="form-label fw-bold">Select Teacher</label>
                        <select asp-for="SelectedTeacherId" class="form-select" asp-items="@(new SelectList(Model.Assignment, "TeacherId", "FullName"))" required>
                            <option value="">-- Choose a Teacher --</option>
                        </select>
                        <span asp-validation-for="SelectedTeacherId" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Confirm Assignment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

